#!/bin/bash

# Check if the user provided a directory name as an argument
if [ -z "$1" ]; then
    echo "Please provide a directory name to search for."
    exit 1
fi

# Use the find command to search for the specified directory
directory_name="$1"
search_result=$(find / -type d -name "$directory_name" 2>/dev/null)

# Check if the search result is empty
if [ -z "$search_result" ]; then
    echo "Directory '$directory_name' not found."
else
    echo "Directory '$directory_name' found at:"
    echo "$search_result"
fi




